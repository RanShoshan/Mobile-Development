<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96a0ab"
    tools:context=".CalculatorActivity"
    tools:layout_editor_absoluteY="73dp">

    <Button
        android:id="@+id/bt9"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/numbers"
        android:text="9"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/bt5"
        app:layout_constraintStart_toEndOf="@+id/bt8" />

    <Button
        android:id="@+id/bt8"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/numbers"
        android:text="8"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/bt4"
        app:layout_constraintEnd_toStartOf="@+id/bt9"
        app:layout_constraintStart_toEndOf="@+id/bt7" />

    <Button
        android:id="@+id/bt7"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/numbers"
        android:text="7"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/bt3"
        app:layout_constraintEnd_toStartOf="@+id/bt8"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btm"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded_action_button"
        android:text="*"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/bts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/bt9" />

    <Button
        android:id="@+id/bt6"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bt9"
        android:layout_marginBottom="68dp"
        android:background="@drawable/numbers"
        android:text="6"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt5" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/bt8"
        android:layout_alignTop="@+id/bt6"
        android:background="@drawable/numbers"
        android:text="5"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/bt2"
        app:layout_constraintEnd_toStartOf="@+id/bt6"
        app:layout_constraintStart_toEndOf="@+id/bt4" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:background="@drawable/numbers"
        android:text="4"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/bt1"
        app:layout_constraintEnd_toStartOf="@+id/bt5"
        app:layout_constraintStart_toEndOf="@+id/bt3" />

    <Button
        android:id="@+id/btd"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/bt6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded_action_button"
        android:text="/"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:background="@drawable/numbers"
        android:tag="num"
        android:text="3"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/bt0"
        app:layout_constraintEnd_toStartOf="@+id/bt4"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:background="@drawable/numbers"
        android:tag="num"
        android:text="2"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt1" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:background="@drawable/numbers"
        android:tag="num"
        android:text="1"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt2"
        app:layout_constraintStart_toEndOf="@+id/bt0" />

    <Button
        android:id="@+id/bta"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bt3"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded_action_button"
        android:text="+"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/btm"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btc"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bt9"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/equal_clear"
        android:text="CLEAR"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bt0"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/bt8"
        android:layout_alignTop="@+id/btc"
        android:background="@drawable/numbers"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bte"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/bt7"
        android:layout_alignTop="@+id/btc"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/equal_clear"
        android:text="="
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/btc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bts"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btc"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded_action_button"
        android:text="-"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/btd"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/info"
        android:layout_width="361dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/numbers"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="361dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/numbers"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info" />

</android.support.constraint.ConstraintLayout>